
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>房子管理</title>

    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/datepicker")
    @Styles.Render("~/bundles/css/datatables")
    @Styles.Render("~/bundles/css/select")
    <link rel="stylesheet" type="text/css" href="~/css/Common.css" />

    <style>
    </style>
</head>
<body>
    @{Html.RenderAction("GetHeader", "Account"); }

    <div class="container">
        <h2>房子管理</h2>
        <div>
            <form class="form-inline" id="formSearch">
                <div class="form-group">
                    <label>名称</label>
                    <input type="text" class="form-control" name="Name" placeholder="">
                </div>
                <button type="button" class="btn btn-default" id="btnSearch">查询</button>
            </form>

            <div class="my-toolbar">
                <button class="btn btn-danger" id="btnDelete">删除所选</button>
                <button class="btn btn-primary" id="btnAdd" data-toggle="modal" data-target="#modalAdd">添加</button>
            </div>

            <table id="myTable" class="table table-striped my-datatables">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAllSelect" /></th>
                        <th>编号</th>
                        <th>房号</th>
                        <th>面积</th>
                        <th>房型</th>
                        <th>楼栋</th>
                        <th>楼层</th>
                        <th>业主</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <!-- 添加弹出窗口 -->
        <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="modalAdd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">添加房子</h4>
                    </div>
                    <div class="modal-body">
                        <form id="formAdd" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-3">房号</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Name" placeholder="请输入房号" maxlength="20" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">面积(m²)</label>
                                <div class="col-xs-6">
                                    <input type="number" class="form-control" name="Area" placeholder="请输入房子面积" validate-type="required unumber range" validate-max="1000000" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">房型</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Type" placeholder="请输入房型" maxlength="20" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">楼栋</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="BuildingId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">楼层</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="Floor">
                                        <option value="0">请先选择楼栋</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btnAddApply">提交</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 编辑弹出窗口 -->
        <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="modalAdd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">编辑房子</h4>
                    </div>
                    <div class="modal-body">
                        <form id="formEdit" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-3">编号</label>
                                <div class="col-xs-6">
                                    <input type="text" readonly class="form-control" name="Id">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">房号</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Name" placeholder="请输入房号" maxlength="20" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">面积(m²)</label>
                                <div class="col-xs-6">
                                    <input type="number" class="form-control" name="Area" placeholder="请输入房子面积" validate-type="required unumber range" validate-max="1000000" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">房型</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Type" placeholder="请输入房型" maxlength="20" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">楼栋</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="BuildingId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">楼层</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="Floor">
                                        <option value="0">请先选择楼栋</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btnEditApply">提交</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/js/jquery_bootstrap")
    @Scripts.Render("~/bundles/js/datepicker")
    @Scripts.Render("~/bundles/js/datatables")
    @Scripts.Render("~/bundles/js/select")
    <script src="~/js/Common.js"></script>

    <script>
        $(function () {
            init();
        });

        var myDataTable;      //datatables对象
        var waitReload = false;     //表示修改或添加过，需要重载表格
        var buildingOptHtml = "";   //楼栋select的option

        function init() {
            initView();
            bindEvent();
        }

        function initView() {
            //设置菜单选项激活
            $("#liHouseManage").addClass("active");

            //初始化popover组件
            $("[data-toggle='popover']").popover(Common.popoverOptions);

            //初始化日期插件
            //$(".datepicker").datepicker(Common.datepickerOptions);

            //初始化select组件
            $(".selectpicker").selectpicker({
                size: 10,
                liveSearch: true,
                width: "auto"
            });

            //初始化datatable
            var $myTable = $("#myTable");
            //$myTable.DataTable(Common.datatablesOptions);
            var $formSearch = $("#formSearch");
            myDataTable = $myTable.DataTable({
                ajax: function (data, callback, settings) {
                    var $btnSearch = $("#btnSearch");
                    $.ajax({
                        dataType: "JSON",
                        type: "POST",
                        data: {
                            pageSize: data.length,		//data.length:每页的条数
                            page: parseInt((data.start + 1) / data.length) + 1,	//data.start:第一条数据的起始位置(0)
                            name: $formSearch.find("[name='Name']").val()
                        },
                        url: "/Room/GetRoomPage",
                        success: function (res) {
                            var returnData = {};
                            if (res.Success) {
                                //封装返回的json变为dataTable要求的标准
                                returnData.data = res.Result.Data;               //数据
                                returnData.recordsTotal = res.Result.Total;      //总数据数
                                returnData.recordsFiltered = res.Result.Total;   //过滤后的数据总数
                            } else {
                                alert(res.Msg);

                                returnData.data = {};             //数据
                                returnData.recordsTotal = 0;      //总数据数
                                returnData.recordsFiltered = 0;   //过滤后的数据总数
                            }
                            returnData.draw = data.draw;    //确保Ajax从服务器返回的是对应的
                            callback(returnData);
                        },
                        error: function (xmlHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(xmlHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $btnSearch.attr("disabled", true);
                        },
                        complete: function () {
                            $btnSearch.attr("disabled", false);
                        },
                    });
                },
                columns: [
                    {
                        data: "Id",
                        render: function (data) {
                            return "<input type='checkbox' class='my-chkSelect' data-id='" + data + "'/>";
                        }
                    },
                    { data: "Id" },
                    { data: "Name" },
                    { data: "Area" },
                    {
                        data: "BuildingName",
                        render: function (data, type, row) {
                            return "<div class='my-room-buidlingName my-innerDiv' data-id='" + row["BuildingId"] + "'>" + data + "</div>";
                        }
                    },
                    { data: "Type" },
                    { data: "Floor" },
                    {
                        data: "OwnerName",
                        render: function (data, type, row) {
                            if (!data) {
                                data = "无";
                            }
                            return "<div class='my-room-ownerName my-innerDiv' data-id='" + row["OwnerId"] + "'>" + data + "</div>";
                        }
                    },
                    {
                        render: function (data, type, row, meta) {
                            return "<button type='button' class='btn btn-primary btn-sm my-btnEdit' data-rowIndex='" + meta.row + "'>编辑</button>";
                        }
                    }
                ],
            });
        }

        function bindEvent() {
            var $document = $(document);

            ////阻止datepicker的show/hide事件向上冒泡，因为会触发modal的事件
            //$document.on("show", ".datepicker", function (e) {
            //    //e.preventDefault();
            //    e.stopPropagation();
            //});
            //$document.on("hide", ".datepicker", function (e) {
            //    //e.preventDefault();
            //    e.stopPropagation();
            //});

            //添加的弹出窗口显示时初始化字段
            $document.on("show.bs.modal", "#modalAdd", function (e) {
                var $this = $(this);
                $this.find("input").val("");

                //获取楼栋选项
                $.when(setBuildingOptHtml()).done(function (data) {
                    if (data) {
                        alert("加载楼栋信息失败：" + data);
                    } else {
                        var $buildingSelect = $this.find("[name='BuildingId']");
                        $buildingSelect.html(buildingOptHtml);
                        $buildingSelect.selectpicker("refresh");
                        $buildingSelect.trigger("changed.bs.select");
                    }
                });
            });

            //添加、编辑的弹出窗口隐藏时隐藏提示.
            $document.on("hide.bs.modal", "#modalAdd,#modalEdit", function (e) {
                var $this = $(this);
                //隐藏提示
                $this.find("[data-toggle='popover']").popover("hide");

                if (waitReload) {
                    myDataTable.ajax.reload();
                    waitReload = false;
                }
            });

            //添加提交按钮点击事件
            $document.on("click", "#btnAddApply", function () {
                var $form = $("#formAdd");
                var $floor = $form.find("[name='Floor']");
                if ($floor.val() <= 0) {
                    alert("请先选择楼栋和楼层，如果楼栋加载失败，请重新打开");
                }else if (Common.validateForm($form)) {
                    var $this = $(this);
                    //TODO
                    $.ajax({
                        url: "/Room/AddRoom",
                        method: "post",
                        data: {
                            Name: $form.find("[name='Name']").val(),
                            Area: $form.find("[name='Area']").val(),
                            Floor: $floor.val(),
                            BuildingId: $form.find("[name='BuildingId']").val(),
                            Type: $form.find("[name='Type']").val(),
                        },
                        success: function (res) {
                            alert(res.Msg);
                            if (res.Success) {
                                waitReload = true;
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $this.attr("disabled", true);
                        },
                        complete: function () {
                            $this.attr("disabled", false);
                        },
                    });
                }
            });

            //查询按钮点击事件
            $document.on("click", "#btnSearch", function () {
                myDataTable.ajax.reload();
            });

            //编辑按钮点击事件
            $document.on("click", ".my-btnEdit", function(){
                var $this = $(this);
                var $form = $("#formEdit");
                var data = myDataTable.rows($this.attr("data-rowIndex")).data()[0];

                //给编辑框里的输入框赋值
                $form.find("[name='Id']").val(data.Id);
                $form.find("[name='Name']").val(data.Name);
                $form.find("[name='Area']").val(data.Area);
                $form.find("[name='Type']").val(data.Type);

                //获取楼栋选项
                $.when(setBuildingOptHtml()).done(function (res) {
                    if (res) {
                        alert("加载楼栋信息失败：" + res);
                        $form.find("[name='BuildingId']").html("<option value='" + data.BuildingId + "'>" + data.BuildingName + "</option>");
                        $form.find("[name='Floor']").html("<option value='" + data.Floor + "'>" + data.Floor + "楼</option>");
                    } else {
                        var $buildingSelect = $form.find("[name='BuildingId']");
                        $buildingSelect.html(buildingOptHtml);
                        $buildingSelect.selectpicker("refresh");
                        $buildingSelect.selectpicker("val", data.BuildingId);
                        $buildingSelect.trigger("changed.bs.select");
                        $form.find("[name='Floor']").selectpicker("val", data.Floor);
                    }
                });

                //显示编辑框
                $('#modalEdit').modal('show');
            });

            //编辑框提交按钮
            $document.on("click", "#btnEditApply", function () {
                var $form = $("#formEdit");
                var $floor = $form.find("[name='Floor']");
                if ($floor.val() <= 0) {
                    alert("请先选择楼栋和楼层，如果楼栋加载失败，请重新打开");
                } else if (Common.validateForm($form)) {
                    var $this = $(this);
                    $.ajax({
                        url: "/Room/UpdateRoom",
                        method: "post",
                        data: {
                            Id: $form.find("[name='Id']").val(),
                            Name: $form.find("[name='Name']").val(),
                            Area: $form.find("[name='Area']").val(),
                            Floor: $floor.val(),
                            BuildingId: $form.find("[name='BuildingId']").val(),
                            Type: $form.find("[name='Type']").val(),
                        },
                        success: function (res) {
                            alert(res.Msg);
                            if (res.Success) {
                                waitReload = true;
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $this.attr("disabled", true);
                        },
                        complete: function () {
                            $this.attr("disabled", false);
                        },
                    });
                }
            });

            //全选
            $document.on("change", "#chkAllSelect", function () {
                $("input.my-chkSelect").prop("checked", $(this).is(":checked"));
            });

            //datatable重绘时取消全选
            myDataTable.on("draw", function () {
                $("#chkAllSelect").prop("checked", false);
            });

            $document.on("click", "#btnDelete", function () {
                var ids = [];
                $("input.my-chkSelect:checked").each(function (index, element) {
                    ids.push($(this).attr("data-id"));
                });

                if (ids.length == 0) {
                    alert("请先勾选要删除的条目");
                } else {
                    if (confirm("确定要删除吗？将会删除该楼中的所有房间数据")) {
                        $this = $(this);

                        $.ajax({
                            url: "/Room/DeleteRooms",
                            method: "post",
                            data: {
                                ids: ids
                            },
                            traditional: true,  //规定是否使用参数序列化的传统样式。这样后台数组变量才能接受到值
                            success: function (res) {
                                alert(res.Msg);
                                if (res.Success) {
                                    myDataTable.ajax.reload();
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                            },
                            beforeSend: function () {
                                $this.attr("disabled", true);
                            },
                            complete: function () {
                                $this.attr("disabled", false);
                            },
                        });
                    }
                }
            });

            //楼栋select选择时更新楼层select
            $document.on("changed.bs.select", "select[name='BuildingId']", function () {
                var $this = $(this);
                var $floorSelect = $this.closest("form").find("select[name='Floor']");
                if ($floorSelect.length > 0) {
                    var $option = $this.find("option:selected");
                    $floorSelect.html(getFloorOptHtml($option.attr("data-floorNum")));
                    $floorSelect.selectpicker("refresh");
                }
            });
        }

        //获取楼栋select的选项,传入延迟对象来配合ajax保证延迟执行，不阻塞线程
        function setBuildingOptHtml() {
            var deferredObj = $.Deferred();
            //当没有时用ajax获取
            if (!buildingOptHtml) {
                $.ajax({
                    url: "/Building/GetBuildingsCoreInfo",
                    //async: false,
                    method: "post",
                    success: function (res) {
                        if (res.Success) {
                            //myDataTable.ajax.reload();
                            var list = res.Result;
                            if (list.length == 0) {
                                deferredObj.resolve("请先添加楼栋");
                            } else {
                                var html = "";
                                for (let i = 0; i < list.length; i++) {
                                    html += "<option value='" + list[i].Id +"' data-floorNum='" + list[i].FloorNum + "'>" + list[i].Name +"</option>";
                                }
                                buildingOptHtml = html;
                                deferredObj.resolve("");
                            }
                        }
                        else deferredObj.resolve(res.Msg);
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        //Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        deferredObj.resolve("连接失败，请稍候重试");
                    },
                });
            } else {
                deferredObj.resolve("");
            }

            return deferredObj;
        }

        function getFloorOptHtml(num) {
            var html = "";
            for (let i = 1; i <= num; i++) {
                html += "<option value='" + i + "'>" + i + "楼</option>";
            }

            return html;
        }
    </script>
</body>
</html>
