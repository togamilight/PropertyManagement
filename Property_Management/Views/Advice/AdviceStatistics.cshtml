
<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>投诉建议统计</title>

    @Styles.Render("~/bundles/css/bootstrap")
    <link rel="stylesheet" type="text/css" href="~/css/Common.css" />

    <style>
    </style>
</head>
<body>
    @{Html.RenderAction("GetHeader", "Account"); }
    <div class="container">
        <h3>月度统计（数量）</h3>
        <div id="barChart" style="height:400px;"></div>
    </div>
    @Scripts.Render("~/bundles/js/jquery_bootstrap")
    @Scripts.Render("~/bundles/js/echarts")

    <script>
        var barChart;
        var barData = null;
        var barCount = [];

        $(function () {
            init();
        });

        function init() {
            initView();
            bindEvent();
        }

        function initView() {
            //设置菜单选项激活
            $("#liAdviceManage").addClass("active");

            barChart = echarts.init(document.getElementById('barChart'));

            var barOption = {
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                        type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                    }
                },
                xAxis: {
                    type: 'category',
                    data: []
                },
                yAxis: {
                    type: 'value'
                },
                series: [{
                    data: [],
                    type: 'bar',
                    label: {
                        normal: {
                            show: true,
                        }
                    },
                }],
                dataZoom: [{
                    show: true
                },
                {
                    type: "inside"
                }]
            };

            barChart.setOption(barOption);

            $.ajax({
                url: "/Advice/GetAdviceBarData",
                method: "post",
                success: function(res){
                    if (res.Success) {
                        var barMonth = [];
                        barCount = [];
                        barData = res.Result;
                        for (let i = 0; i < barData.length; i++) {
                            barMonth.push(barData[i].Month);
                            barCount.push(barData[i].Count);
                        }

                        var option = {
                            xAxis: {
                                data: barMonth
                            },
                            series: [{
                                data: barCount,
                            }]
                        };
                        barChart.setOption(option);
                    } else {
                        alert(res.Msg);
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                },
                beforeSend: function () {
                    barChart.showLoading();
                },
                complete: function () {
                    barChart.hideLoading();
                }
            });
        }

        function bindEvent() {
        }
    </script>
</body>
</html>
