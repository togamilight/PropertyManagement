                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/js/jquery_bootstrap")
    @Scripts.Render("~/bundles/js/datepicker")
    @Scripts.Render("~/bundles/js/datatables")
    @Scripts.Render("~/bundles/js/select")
    <script src="~/js/Common.js"></script>

    <script>
        $(function () {
            init();
        });

        var myDataTable;      //datatables对象
        var waitReload = false;     //表示修改或添加过，需要重载表格
        var buildingOptHtml = "";   //楼栋select的option

        var searchData = {
            name: "",
            sex: 2,
            beginDate: "",
            endDate: ""
        };

        function init() {
            initView();
            bindEvent();
        }

        function initView() {
            //设置菜单选项激活
            $("#liOwnerManage").addClass("active");

            //初始化popover组件
            $("[data-toggle='popover']").popover(Common.popoverOptions);

            //初始化日期插件
            $(".datepicker").datepicker(Common.datepickerOptions);


            //初始化select组件
            $(".selectpicker").selectpicker({
                size: 10,
                liveSearch: true,
                width: "auto"
            });

            ////获取楼栋选项
            //$.when(setBuildingOptHtml()).done(function (data) {
            //    var html = "<option value='0'>全部</option>"
            //    if (data) {
            //        alert("加载楼栋信息失败：" + data);
            //    } else {
            //        html += buildingOptHtml;
            //    }

            //    var $buildingSelect = $("#formSearch").find("[name='BuildingId']");
            //    $buildingSelect.html(html);
            //    $buildingSelect.selectpicker("refresh");
            //});

            //初始化datatable
            var $myTable = $("#myTable");
            //var $formSearch = $("#formSearch");
            myDataTable = $myTable.DataTable({
                ajax: function (data, callback, settings) {
                    var $btnSearch = $("#btnSearch");
                    $.ajax({
                        dataType: "JSON",
                        type: "POST",
                        data: {
                            pageSize: data.length, //data.length:每页的条数
                            page: parseInt((data.start + 1) / data.length) + 1,	//data.start:第一条数据的起始位置(0)
                            name: searchData.name,
                            sex: searchData.sex,
                            beginDate: searchData.beginDate,
                            endDate: searchData.endDate
                        },
                        url: "/Owner/GetOwnerPage",
                        success: function (res) {
                            var returnData = {};
                            if (res.Success) {
                                //封装返回的json变为dataTable要求的标准
                                returnData.data = res.Result.Data;               //数据
                                returnData.recordsTotal = res.Result.Total;      //总数据数
                                returnData.recordsFiltered = res.Result.Total;   //过滤后的数据总数
                            } else {
                                alert(res.Msg);

                                returnData.data = {};
                                returnData.recordsTotal = 0;
                                returnData.recordsFiltered = 0;
                            }
                            returnData.draw = data.draw;
                            callback(returnData);
                        },
                        error: function (xmlHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(xmlHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $btnSearch.attr("disabled", true);
                        },
                        complete: function () {
                            $btnSearch.attr("disabled", false);
                        },
                    });
                },
                columns: [
                    {
                        data: "Owner.Id",
                        render: function (data) {
                            return "<input type='checkbox' class='my-chkSelect' data-id='" + data + "'/>";
                        }
                    },
                    { data: "Owner.Id" },
                    { data: "Owner.Name" },
                    {
                        data: "Owner.Sex",
                        render: function (data) {
                            if (data) {
                                return "男";
                            }
                            return "女";
                        }
                    },
                    { data: "Owner.PhoneNum" },
                    { data: "Owner.IDCard" },
                    { 
                        data: "Owner.Date",
                        render: function (data) {
                            return Common.parseDate(data).format("yyyy-MM-dd");
                        }
                    },
                    {
                        data: "RoomName",
                        render: function (data, type, row, meta) {
                            return "<a href='#' class='my-owner-room my-innerDiv' data-rowIndex='" + meta.row +"'>" + data + "(" + row["BuildingName"] + ")</a>";
                        }
                    },
                    {
                        data: "ParkingName",
                        render: function (data, type, row) {
                            if (!data) {
                                return "无";
                            }
                            return "<a href='#' class='my-owner-parking my-innerDiv' data-id='" + row["Owner"].ParkingId + "'>" + data + "</a>";
                        }
                    },
                    {
                        render: function (data, type, row, meta) {
                            return "<button type='button' class='btn btn-primary btn-sm my-btnEdit' data-rowIndex='" + meta.row + "'>编辑</button>";
                        }
                    }
                ],
            });
        }

        function bindEvent() {
            var $document = $(document);

            //阻止datepicker的show/hide事件向上冒泡，因为会触发modal的事件
            $document.on("show", ".datepicker", function (e) {
                //e.preventDefault();
                e.stopPropagation();
            });
            $document.on("hide", ".datepicker", function (e) {
                //e.preventDefault();
                e.stopPropagation();
            });

            //添加的弹出窗口显示时初始化字段
            $document.on("show.bs.modal", "#modalAdd", function (e) {
                var $this = $(this);
                $this.find("input:not([type='radio'])").val("");

                //获取楼栋选项
                $.when(setBuildingOptHtml()).done(function (data) {
                    if (data) {
                        alert("加载楼栋信息失败：" + data);
                    } else {
                        var $buildingSelect = $this.find("[name='BuildingId']");
                        $buildingSelect.html(buildingOptHtml);
                        $buildingSelect.selectpicker("refresh");
                        $buildingSelect.trigger("changed.bs.select");
                    }
                });

                //设置默认日期为今天
                $("#addDate").datepicker("setDate", Date());
            });

            //添加、编辑的弹出窗口隐藏时隐藏提示.
            $document.on("hide.bs.modal", "#modalAdd,#modalEdit", function (e) {
                var $this = $(this);
                //隐藏提示
                $this.find("[data-toggle='popover']").popover("hide");

                if (waitReload) {
                    myDataTable.ajax.reload();
                    waitReload = false;
                }
            });

            //添加提交按钮点击事件
            $document.on("click", "#btnAddApply", function () {
                var $form = $("#formAdd");
                var $roomId = $form.find("[name='RoomId']");
                if ($roomId.val() <= 0) {
                    alert("请先选择楼栋和房子，如果楼栋或房子加载失败，请重新打开");
                } else if (Common.validateForm($form)) {
                    var $this = $(this);
                    //TODO
                    $.ajax({
                        url: "/Owner/AddOwner",
                        method: "post",
                        data: {
                            Name: $form.find("[name='Name']").val(),
                            Password: $form.find("[name='Password']").val(),
                            Sex: $form.find("[name='Sex']:checked").val() == 1,
                            PhoneNum: $form.find("[name='PhoneNum']").val(),
                            IDCard: $form.find("[name='IDCard']").val(),
                            RoomId: $roomId.val(),
                            Date: $form.find("[name='Date']").val(),
                        },
                        success: function (res) {
                            alert(res.Msg);
                            if (res.Success) {
                                waitReload = true;
                                $form.find("[name='BuildingId']").trigger("changed.bs.select");
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $this.attr("disabled", true);
                        },
                        complete: function () {
                            $this.attr("disabled", false);
                        },
                    });
                }
            });

            //查询按钮点击事件
            $document.on("click", "#btnSearch", function () {
                var $formSearch = $("#formSearch");

                searchData.name = $formSearch.find("[name='Name']").val(),
                searchData.sex = $formSearch.find("[name='Sex']").val(),
                searchData.beginDate = $formSearch.find("[name='BeginDate']").val(),
                searchData.endDate = $formSearch.find("[name='EndDate']").val()

                myDataTable.ajax.reload();
            });

            //编辑按钮点击事件
            $document.on("click", ".my-btnEdit", function () {
                var $this = $(this);
                var $form = $("#formEdit");
                var data = myDataTable.rows($this.attr("data-rowIndex")).data()[0];

                //给编辑框里的输入框赋值
                $form.find("[name='Id']").val(data.Owner.Id);
                $form.find("[name='Name']").val(data.Owner.Name);
                $form.find("[name='Password']").val(data.Owner.Password);
                $form.find("[name='PhoneNum']").val(data.Owner.PhoneNum);
                $form.find("[name='IDCard']").val(data.Owner.IDCard);
                $form.find("[name='Date']").val(Common.parseDate(data.Owner.Date).format("yyyy-MM-dd"));
                var sex = data.Owner.Sex ? 1 : 0;
                $form.find("[name='Sex']").each(function (index, element) {
                    var $this = $(this);
                    if ($this.val() == sex) {
                        $this.prop("checked", true);
                    } else {
                        $this.prop("checked", false);
                    }
                });

                //获取楼栋选项
                $.when(setBuildingOptHtml()).done(function (res) {
                    var $buildingSelect = $form.find("[name='BuildingId']");
                    if (res) {
                        alert("加载楼栋信息失败：" + res);
                        $buildingSelect.html("<option value='" + data.BuildingId + "'>" + data.BuildingName + "</option>");
                    } else {
                        $buildingSelect.html(buildingOptHtml);
                    }
                    $buildingSelect.selectpicker("refresh");
                    $buildingSelect.selectpicker("val", data.BuildingId);
