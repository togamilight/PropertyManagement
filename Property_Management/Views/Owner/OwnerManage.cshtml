
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>现有业主管理</title>

    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/datepicker")
    @Styles.Render("~/bundles/css/datatables")
    @Styles.Render("~/bundles/css/select")
    <link rel="stylesheet" type="text/css" href="~/css/Common.css" />

    <style>
    </style>
</head>
<body>
    @{Html.RenderAction("GetHeader", "Account"); }

    <div class="container">
        <h2>现有业主管理</h2>
        <div>
            <form class="form-inline" id="formSearch">
                <div class="form-group">
                    <label>姓名</label>
                    <input type="text" class="form-control" name="Name" placeholder="">
                </div>
                <div class="form-group">
                    <label>&nbsp;&nbsp;性别</label>
                    <select class="form-control" name="Sex">
                        <option value="2">全部</option>
                        <option value="0">女</option>
                        <option value="1">男</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="sr-only">入住日期</label>
                    <div class="input-group input-daterange datepicker">
                        <div class="input-group-addon">入住日期</div>
                        <input type="text" class="form-control" name="BeginDate">
                        <div class="input-group-addon">至</div>
                        <input type="text" class="form-control" name="EndDate">
                    </div>
                </div>
                <button type="button" class="btn btn-primary" id="btnSearch">查询</button>
            </form>

            <div class="my-toolbar">
                <button class="btn btn-danger" id="btnDelete">删除所选</button>
                <button class="btn btn-danger" id="btnDisuse">搬走所选</button>
                <button class="btn btn-primary" id="btnAdd" data-toggle="modal" data-target="#modalAdd">添加</button>
            </div>

            <table id="myTable" class="table table-striped my-datatables">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAllSelect" /></th>
                        <th>编号</th>
                        <th>姓名</th>
                        <th>性别</th>
                        <th>联系电话</th>
                        <th>身份证号</th>
                        <th>入住日期</th>
                        <th>房子</th>
                        <th>车位</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <!-- 添加弹出窗口 -->
        <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="modalAdd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">添加业主</h4>
                    </div>
                    <div class="modal-body">
                        <form id="formAdd" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-3">姓名</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Name" placeholder="请输入姓名" maxlength="20" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">密码</label>
                                <div class="col-xs-6">
                                    <input type="password" class="form-control" name="Password" placeholder="请输入密码" maxlength="20" validate-type="required length" validate-minLen="6" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">性别</label>
                                <div class="col-xs-6">
                                    <label class="radio-inline">
                                        <input type="radio" name="Sex" value="0" checked="checked"> 女
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="Sex" value="1"> 男
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">联系电话</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="PhoneNum" placeholder="请输入手机或固话号码" maxlength="20" validate-type="required phoneNum" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">身份证号</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="IDCard" placeholder="请输入身份证号" maxlength="20" validate-type="required idcard" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">楼栋</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="BuildingId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">房子</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="RoomId">
                                        <option value="0">请先选择楼栋</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">入住日期</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control datepicker" placeholder="请输入入住日期" id="addDate" name="Date" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btnAddApply">提交</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 编辑弹出窗口 -->
        <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="modalAdd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">编辑业主</h4>
                    </div>
                    <div class="modal-body">
                        <form id="formEdit" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-3 text-right">编号</label>
                                <div class="col-xs-6">
                                    <input type="text" readonly class="form-control" name="Id">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">姓名</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Name" placeholder="请输入姓名" maxlength="20" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">密码</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Password" placeholder="请输入密码" maxlength="20" validate-type="required length" validate-minLen="6" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">性别</label>
                                <div class="col-xs-6">
                                    <label class="radio-inline">
                                        <input type="radio" name="Sex" value="0"> 女
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="Sex" value="1"> 男
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">联系电话</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="PhoneNum" placeholder="请输入手机或固话号码" maxlength="20" validate-type="required phoneNum" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">身份证号</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="IDCard" placeholder="请输入身份证号" maxlength="20" validate-type="required idCard" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">楼栋</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="BuildingId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">房子</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="RoomId">
                                        <option value="0">请先选择楼栋</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">入住日期</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control datepicker" placeholder="请输入入住日期" name="Date" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btnEditApply">提交</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 房子详情弹出窗口 -->
        <div class="modal fade" id="modalRoomInfo" tabindex="-1" role="dialog" aria-labelledby="modalRoomInfo">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">房子详情</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <label class="control-label col-xs-3 text-right">编号</label>
                            <div class="col-xs-6" name="Id">
