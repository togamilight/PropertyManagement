
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>收费记录管理</title>

    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/css/datepicker")
    @Styles.Render("~/bundles/css/datatables")
    @Styles.Render("~/bundles/css/select")
    <link rel="stylesheet" type="text/css" href="~/css/Common.css" />

    <style>
    </style>
</head>
<body>
    @{Html.RenderAction("GetHeader", "Account"); }

    <div class="container">
        <h2>收费记录管理</h2>
        <div>
            <form class="form-inline" id="formSearch">
                <div class="form-group">
                    <label>&nbsp;&nbsp;项目</label>
                    <select class="selectpicker form-control" name="FeeItemId">
                        <option value="0">全部</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>&nbsp;&nbsp;业主状态</label>
                    <select class="selectpicker form-control" name="IsDisuse">
                        <option value="2">全部</option>
                        <option value="0">现有业主</option>
                        <option value="1">搬走业主</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>&nbsp;&nbsp;业主</label>
                    <select class="selectpicker form-control" name="OwnerId">
                        <option value="0">全部</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>&nbsp;&nbsp;缴费状态</label>
                    <select class="selectpicker form-control" name="IsFinish">
                        <option value="2">全部</option>
                        <option value="0">未缴</option>
                        <option value="1">已缴</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="sr-only">日期</label>
                    <div class="input-group input-daterange datepicker">
                        <div class="input-group-addon">日期</div>
                        <input type="text" class="form-control" name="BeginDate">
                        <div class="input-group-addon">至</div>
                        <input type="text" class="form-control" name="EndDate">
                    </div>
                </div>
                <button type="button" class="btn btn-primary" id="btnSearch">查询</button>
            </form>

            <div class="my-toolbar">
                <button class="btn btn-danger" id="btnDelete">删除所选</button>
                <button class="btn btn-primary" id="btnAdd" data-toggle="modal" data-target="#modalAdd">添加</button>
            </div>

            <table id="myTable" class="table table-striped my-datatables">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="chkAllSelect" /></th>
                        <th>编号</th>
                        <th>项目</th>
                        <th>收费标准</th>
                        <th>费用</th>
                        <th>日期</th>
                        <th>业主</th>
                        <th>缴费日期</th>
                        <th>备注</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <!-- 添加弹出窗口 -->
        <div class="modal fade" data-backdrop="static" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="modalAdd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">添加收费记录</h4>
                    </div>
                    <div class="modal-body">
                        <form id="formAdd" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-3">收费项目</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="FeeItemId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">收费标准</label>
                                <div class="col-xs-6">
                                    <input type="text" readonly class="form-control" name="Scale">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">业主</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="OwnerId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">费用</label>
                                <div class="col-xs-6">
                                    <input type="number" class="form-control" name="Money" placeholder="请输入费用" maxlength="20" validate-type="required unumber" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">备注</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Remark" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">日期</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control datepicker" placeholder="请输入日期" id="addDate" name="Date" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btnAddApply">提交</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 编辑弹出窗口 -->
        <div class="modal fade" data-backdrop="static" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="modalAdd">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">编辑收费记录</h4>
                    </div>
                    <div class="modal-body">
                        <form id="formEdit" class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-3 text-right">编号</label>
                                <div class="col-xs-6">
                                    <input type="text" readonly class="form-control" name="Id">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">收费项目</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="FeeItemId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">收费标准</label>
                                <div class="col-xs-6">
                                    <input type="text" readonly class="form-control" name="Scale">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">业主</label>
                                <div class="col-xs-6">
                                    <select class="selectpicker" name="OwnerId">
                                        <option value="0">加载中...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">费用</label>
                                <div class="col-xs-6">
                                    <input type="number" class="form-control" name="Money" placeholder="请输入费用" maxlength="20" validate-type="required unumber" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">备注</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control" name="Remark" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">日期</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control datepicker" placeholder="请输入日期" name="Date" validate-type="required" data-toggle="popover" data-placement="right">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-xs-3">缴费日期</label>
                                <div class="col-xs-6">
                                    <input type="text" class="form-control datepicker" name="FinishDate">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" id="btnEditApply">提交</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 业主详情弹出窗口 -->
        <div class="modal fade" id="modalOwnerInfo" tabindex="-1" role="dialog" aria-labelledby="modalOwnerInfo">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">业主详情</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <label class="control-label col-xs-3 text-right">编号</label>
                            <div class="col-xs-6" name="Id">
                                加载中...
                            </div>
                        </div>
                        <div class="row">
                            <label class="control-label col-xs-3 text-right">名称</label>
                            <div class="col-xs-6" name="Name">
                                加载中...
                            </div>
                        </div>
                        <div class="row">
                            <label class="control-label col-xs-3 text-right">性别</label>
                            <div class="col-xs-6" name="Sex">
                                加载中...
                            </div>
