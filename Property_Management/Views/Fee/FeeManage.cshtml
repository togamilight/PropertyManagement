                        <div class="row">
                            <label class="control-label col-xs-3 text-right">名称</label>
                            <div class="col-xs-6" name="Name">
                                加载中...
                            </div>
                        </div>
                        <div class="row">
                            <label class="control-label col-xs-3 text-right">收费标准</label>
                            <div class="col-xs-6" name="Scale">
                                加载中...
                            </div>
                        </div>
                        <div class="row">
                            <label class="control-label col-xs-3 text-right">描述</label>
                            <div class="col-xs-6">
                                <pre name="Discription"></pre>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/js/jquery_bootstrap")
    @Scripts.Render("~/bundles/js/datepicker")
    @Scripts.Render("~/bundles/js/datatables")
    @Scripts.Render("~/bundles/js/select")
    <script src="~/js/Common.js"></script>

    <script>
        $(function () {
            init();
        });

        var myDataTable;      //datatables对象
        var waitReload = false;     //表示修改或添加过，需要重载表格
        var useOwnerOptHtml = "";   //现有业主select的option
        var disuseOwnerOptHtml = "";   //现有业主select的option
        var feeItemOptHtml = "";        //收费项目select的option

        var searchData = {
            feeItemId: 0,
            ownerId: 0,
            beginDate: "",
            endDate: "",
            isFinish: 2,
            isDisuse: 2,
        };

        function init() {
            initView();
            bindEvent();
        }

        function initView() {
            //设置菜单选项激活
            $("#liFeeManage").addClass("active");

            //初始化popover组件
            $("[data-toggle='popover']").popover(Common.popoverOptions);

            //初始化日期插件
            $(".datepicker").datepicker(Common.datepickerOptions);


            //初始化select组件
            $(".selectpicker").selectpicker({
                size: 10,
                liveSearch: true,
                width: "auto"
            });

            //获取收费项目选项
            $.when(setFeeItemOptHtml()).done(function (data) {
                var html = "<option value='0'>全部</option>";
                if (data) {
                    alert("加载收费项目信息失败：" + data);
                } else {
                    html += feeItemOptHtml;
                }

                var $feeItemIdSelect = $("#formSearch").find("[name='FeeItemId']");
                $feeItemIdSelect.html(html);
                $feeItemIdSelect.selectpicker("refresh");
            });

            //获取业主选项
            $.when(setOwnerOptHtml()).done(function (data) {
                var html = "<option value='0'>全部</option>";
                if (data) {
                    alert("加载业主信息失败：" + data);
                } else {
                    html += useOwnerOptHtml + disuseOwnerOptHtml;
                }

                var $ownerSelect = $("#formSearch").find("[name='OwnerId']");
                $ownerSelect.html(html);
                $ownerSelect.selectpicker("refresh");
            });

            //初始化datatable
            var $myTable = $("#myTable");
            //var $formSearch = $("#formSearch");
            myDataTable = $myTable.DataTable({
                ajax: function (data, callback, settings) {
                    var $btnSearch = $("#btnSearch");
                    $.ajax({
                        dataType: "JSON",
                        type: "POST",
                        data: {
                            pageSize: data.length,		//data.length:每页的条数
                            page: parseInt((data.start + 1) / data.length) + 1,	//data.start:第一条数据的起始位置(0)
                            feeItemId: searchData.feeItemId,
                            ownerId: searchData.ownerId,
                            beginDate: searchData.beginDate,
                            endDate: searchData.endDate,
                            isFinish: searchData.isFinish,
                            isDisuse: searchData.isDisuse,
                        },
                        url: "/Fee/GetFeePage",
                        success: function (res) {
                            var returnData = {};
                            if (res.Success) {
                                //封装返回的json变为dataTable要求的标准
                                returnData.data = res.Result.Data;               //数据
                                returnData.recordsTotal = res.Result.Total;      //总数据数
                                returnData.recordsFiltered = res.Result.Total;   //过滤后的数据总数
                            } else {
                                alert(res.Msg);

                                returnData.data = {};
                                returnData.recordsTotal = 0;
                                returnData.recordsFiltered = 0;
                            }
                            returnData.draw = data.draw;
                            callback(returnData);
                        },
                        error: function (xmlHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(xmlHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $btnSearch.attr("disabled", true);
                        },
                        complete: function () {
                            $btnSearch.attr("disabled", false);
                        },
                    });
                },
                columns: [
                    {
                        data: "Fee.Id",
                        render: function (data) {
                            return "<input type='checkbox' class='my-chkSelect' data-id='" + data + "'/>";
                        }
                    },
                    { data: "Fee.Id" },
                    {
                        data: "FeeItemName",
                        render: function (data, type, row) {
                            return "<a href='#' class='my-fee-feeItem my-innerDiv' data-id='" + row["Fee"].FeeItemId + "' data-scale='" + row.Scale + "'>" + data + "</a>";
                        }
                    },
                    { data: "Scale" },
                    { data: "Fee.Money" },
                    {
                        data: "Fee.Date",
                        render: function (data) {
                            return Common.parseDate(data).format("yyyy-MM-dd");
                        }
                    },
                    {
                        data: "OwnerName",
                        render: function (data, type, row) {
                            var style = "";
                            if (row["Fee"].Disuse) {
                                style = "style='color:red;'";
                            }
                            return "<a href='#' class='my-fee-owner my-innerDiv' data-id='" + row["Fee"].OwnerId + "' " + style + ">" + data + "</a>";
                        }
                    },
                    {
                        data: "Fee.FinishDate",
                        render: function (data) {
                            if (!data) {
                                return "未缴";
                            }
                            return Common.parseDate(data).format("yyyy-MM-dd");
                        }
                    },
                    { data: "Fee.Remark" },
                    {
                        render: function (data, type, row, meta) {
                            return "<button type='button' class='btn btn-primary btn-sm my-btnEdit' data-rowIndex='" + meta.row + "'>编辑</button>";
                        }
                    }
                ],
            });
        }

        function bindEvent() {
            var $document = $(document);

            //阻止datepicker的show/hide事件向上冒泡，因为会触发modal的事件
            $document.on("show", ".datepicker", function (e) {
                //e.preventDefault();
                e.stopPropagation();
            });
            $document.on("hide", ".datepicker", function (e) {
                //e.preventDefault();
                e.stopPropagation();
            });

            //添加的弹出窗口显示时初始化字段
            $document.on("show.bs.modal", "#modalAdd", function (e) {
                var $this = $(this);
                $this.find("input").val("");

                //获取现有选项
                $.when(setOwnerOptHtml()).done(function (data) {
                    var html = "<option value='0'>加载中...</option>";
                    if (data) {
                        alert("加载业主信息失败：" + data);
                    } else {
                        html = useOwnerOptHtml;
                    }

                    var $ownerSelect = $this.find("[name='OwnerId']");
                    $ownerSelect.html(html);
                    $ownerSelect.selectpicker("refresh");
                });

                //获取现有选项
                $.when(setFeeItemOptHtml()).done(function (data) {
                    var html = "<option value='0'>加载中...</option>";
                    if (data) {
                        alert("加载收费项目信息失败：" + data);
                    } else {
                        html = feeItemOptHtml;
                    }

                    var $feeItemSelect = $this.find("[name='FeeItemId']");
                    $feeItemSelect.html(html);
                    $feeItemSelect.selectpicker("refresh");
                    $feeItemSelect.trigger("changed.bs.select");
                });

                //设置默认日期为今天
                $("#addDate").datepicker("setDate", Date());
            });

            //添加、编辑的弹出窗口隐藏时隐藏提示.
            $document.on("hide.bs.modal", "#modalAdd,#modalEdit", function (e) {
                var $this = $(this);
                //隐藏提示
                $this.find("[data-toggle='popover']").popover("hide");

                if (waitReload) {
                    myDataTable.ajax.reload();
                    waitReload = false;
                }
            });

            //添加提交按钮点击事件
            $document.on("click", "#btnAddApply", function () {
                var $form = $("#formAdd");
                var $owner = $form.find("[name='OwnerId']");
                var $feeItem = $form.find("[name='FeeItemId']");
                if ($owner.val() <= 0 || $feeItem.val() <= 0) {
                    alert("请先选择收费项目和业主，如果加载失败，请重新打开");
                } else if (Common.validateForm($form)) {
                    var $this = $(this);
                    //TODO
                    $.ajax({
                        url: "/Fee/AddFee",
                        method: "post",
                        data: {
                            FeeItemID: $feeItem.val(),
                            OwnerId: $owner.val(),
                            Money: $form.find("[name='Money']").val(),
                            Remark: $form.find("[name='Remark']").val(),
                            Date: $form.find("[name='Date']").val(),
                        },
                        success: function (res) {
                            alert(res.Msg);
                            if (res.Success) {
                                waitReload = true;
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $this.attr("disabled", true);
                        },
                        complete: function () {
                            $this.attr("disabled", false);
                        },
                    });
                }
            });

            //查询按钮点击事件
            $document.on("click", "#btnSearch", function () {
                var $formSearch = $("#formSearch");

                searchData.feeItemId = $formSearch.find("[name='FeeItemId']").val();
                searchData.ownerId = $formSearch.find("[name='OwnerId']").val();
                searchData.beginDate = $formSearch.find("[name='BeginDate']").val();
                searchData.endDate = $formSearch.find("[name='EndDate']").val();
                searchData.isFinish = $formSearch.find("[name='IsFinish']").val();
                searchData.isDisuse = $formSearch.find("[name='IsDisuse']").val();

                myDataTable.ajax.reload();
            });

            //编辑按钮点击事件
            $document.on("click", ".my-btnEdit", function () {
                var $this = $(this);
                var $form = $("#formEdit");
                var data = myDataTable.rows($this.attr("data-rowIndex")).data()[0];

                //给编辑框里的输入框赋值
                $form.find("[name='Id']").val(data.Fee.Id);
                $form.find("[name='Remark']").val(data.Fee.Remark);
                $form.find("[name='Money']").val(data.Fee.Money);
                $form.find("[name='Scale']").val(data.Scale);
                $form.find("[name='Date']").val(Common.parseDate(data.Fee.Date).format("yyyy-MM-dd"));
                if(data.Fee.FinishDate){
                    $form.find("[name='FinishDate']").val(Common.parseDate(data.Fee.FinishDate).format("yyyy-MM-dd"));
                } else {
                    $form.find("[name='FinishDate']").val("");
                }
                
                //获取现有选项
                $.when(setOwnerOptHtml()).done(function (res) {
                    var html = "<option value='" + data.Fee.OwnerId + "'>" + data.OwnerName + "</option>";
                    if (!(data.Fee.Disuse)) {
                        if (res) {
                            alert("加载业主信息失败：" + res);
                        } else {
                            html = useOwnerOptHtml;
                        }
                    }

                    var $ownerSelect = $form.find("[name='OwnerId']");
                    $ownerSelect.html(html);
                    $ownerSelect.selectpicker("refresh");
                    $ownerSelect.selectpicker("val", data.Fee.OwnerId);
                });

                //获取现有选项
                $.when(setFeeItemOptHtml()).done(function (res) {
                    var html = "<option value='" + data.Fee.FeeItemId + "'>" + data.FeeItemName + "</option>";

                    if (res) {
                        alert("加载收费项目信息失败：" + res);
                    } else {
                        html = feeItemOptHtml;
                    }

                    var $feeItemSelect = $form.find("[name='FeeItemId']");
                    $feeItemSelect.html(html);
                    $feeItemSelect.selectpicker("refresh");
                    $feeItemSelect.selectpicker("val", data.Fee.FeeItemId);
                    $feeItemSelect.trigger("changed.bs.select");
                });

                //当业主已搬走时禁止编辑
                if (data.Fee.Disuse) {
                    $('#modalEdit').find("#btnEditApply").prop("disabled", true);
                } else {
                    $('#modalEdit').find("#btnEditApply").prop("disabled", false);
                }

                //显示编辑框
                $('#modalEdit').modal('show');
            });

            //编辑框提交按钮
            $document.on("click", "#btnEditApply", function () {
                var $form = $("#formEdit");
                var $owner = $form.find("[name='OwnerId']");
                var $feeItem = $form.find("[name='FeeItemId']");
                if ($owner.val() <= 0 || $feeItem.val() <= 0) {
                    alert("请先选择收费项目和业主，如果加载失败，请重新打开");
                } else if (Common.validateForm($form)) {
                    var $this = $(this);
                    $.ajax({
                        url: "/Fee/UpdateFee",
                        method: "post",
                        data: {
                            Id: $form.find("[name='Id']").val(),
                            FeeItemID: $feeItem.val(),
                            OwnerId: $owner.val(),
                            Money: $form.find("[name='Money']").val(),
                            Remark: $form.find("[name='Remark']").val(),
                            Date: $form.find("[name='Date']").val(),
                            FinishDate: $form.find("[name='FinishDate']").val(),
                        },
                        success: function (res) {
                            alert(res.Msg);
                            if (res.Success) {
                                waitReload = true;
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        },
                        beforeSend: function () {
                            $this.attr("disabled", true);
                        },
                        complete: function () {
                            $this.attr("disabled", false);
                        },
                    });
                }
            });

            //全选
            $document.on("change", "#chkAllSelect", function () {
                $("input.my-chkSelect").prop("checked", $(this).is(":checked"));
            });

            //datatable重绘时取消全选
            myDataTable.on("draw", function () {
                $("#chkAllSelect").prop("checked", false);
            });

            $document.on("click", "#btnDelete", function () {
                var ids = [];
                $("input.my-chkSelect:checked").each(function (index, element) {
                    ids.push($(this).attr("data-id"));
                });

                if (ids.length == 0) {
                    alert("请先勾选要删除的条目");
                } else {
                    if (confirm("确定要删除吗？")) {
                        $this = $(this);

                        $.ajax({
                            url: "/Fee/DeleteFees",
                            method: "post",
                            data: {
                                ids: ids
                            },
                            traditional: true,  //规定是否使用参数序列化的传统样式。这样后台数组变量才能接受到值
                            success: function (res) {
                                alert(res.Msg);
                                if (res.Success) {
                                    myDataTable.ajax.reload();
                                }
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                            },
                            beforeSend: function () {
                                $this.attr("disabled", true);
                            },
                            complete: function () {
                                $this.attr("disabled", false);
                            },
                        });
                    }
                }
            });

            //业主状态select选择时更新业主select
            $document.on("changed.bs.select", "select[name='IsDisuse']", function () {
                var $this = $(this);
                var $ownerSelect = $this.closest("form").find("select[name='OwnerId']");
                if ($ownerSelect.length > 0) {
                    //获取业主选项
                    $.when(setOwnerOptHtml()).done(function (data) {
                        var html = "<option value='0'>全部</option>";
                        if (data) {
                            alert("加载业主信息失败：" + data);
                        } else {
                            console.log($this.val());
                            switch ($this.val()) {
                                case 0:
                                case "0":
                                    html += useOwnerOptHtml;
                                    break;
                                case 1:
                                case "1":
                                    html += disuseOwnerOptHtml;
                                    break;
                                default:
                                    html += useOwnerOptHtml + disuseOwnerOptHtml;
                                    break;
                            }
                        }

                        var $ownerSelect = $("#formSearch").find("[name='OwnerId']");
                        $ownerSelect.html(html);
                        $ownerSelect.selectpicker("refresh");
                    });
                }
            });

            //收费项目select选择时更新收费标准
            $document.on("changed.bs.select", "select[name='FeeItemId']", function () {
                var $this = $(this);
                var $scale = $this.closest("form").find("[name='Scale']");
                if ($scale.length > 0) {
                    $scale.val($this.find(":checked").attr("data-scale"));
                }
            });

            //收费项目名称点击时显示收费项目详情
            $document.on("click", "a.my-fee-feeItem", function () {
                var $this = $(this);
                var $modalFeeItemInfo = $("#modalFeeItemInfo");

                var id = $this.attr("data-id");
                var scale = $this.attr("data-scale");

                var divId = $modalFeeItemInfo.find("div[name='Id']");
                //跟已显示的详情不一样，重新获取
                if (divId.text() != id) {
                    divId.text(id);
                    $modalFeeItemInfo.find("div[name='Name']").text($this.text());

                    var divScale = $modalFeeItemInfo.find("div[name='Scale']");
                    var divDiscription = $modalFeeItemInfo.find("[name='Discription']");

                    divScale.text(scale);
                    divDiscription.html("加载中...");

                    $.ajax({
                        url: "/FeeItem/GetFeeItemInfo",
                        method: "post",
                        data: {
                            id: id
                        },
                        success: function (res) {
                            if (res.Success) {
                                divDiscription.text(res.Result.Discription);
                                divScale.text(res.Result.Scale);
                            } else {
                                alert(res.Msg);
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            divId.text("");
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        }
                    });
                }

                //显示详情框
                $modalFeeItemInfo.modal('show');

                return false;
            });

            //业主名称点击时显示业主详情
            $document.on("click", "a.my-fee-owner", function () {
                var $this = $(this);
                var $modalOwnerInfo = $("#modalOwnerInfo");

                var id = $this.attr("data-id");

                var $divId = $modalOwnerInfo.find("div[name='Id']");
                //跟已显示的详情不一样，重新获取
                if ($divId.text() != id) {
                    $divId.text(id);
                    $modalOwnerInfo.find("div[name='Name']").text($this.text());

                    var $divSex = $modalOwnerInfo.find("div[name='Sex']");
                    var $divPhoneNum = $modalOwnerInfo.find("div[name='PhoneNum']");
                    var $divIDCard = $modalOwnerInfo.find("div[name='IDCard']");
                    var $divRoom = $modalOwnerInfo.find("div[name='Room']");
                    var $divParking = $modalOwnerInfo.find("div[name='Parking']");
                    var $divDate = $modalOwnerInfo.find("div[name='Date']");
                    var $divDisuseDate = $modalOwnerInfo.find("div[name='DisuseDate']");

                    $divSex.text("加载中...");
                    $divPhoneNum.text("加载中...");
                    $divIDCard.text("加载中...");
                    $divRoom.text("加载中...");
                    $divParking.text("加载中...");
                    $divDate.text("加载中...");
                    $divDisuseDate.text("加载中...");

                    $.ajax({
                        url: "/Owner/GetOwnerInfo",
                        method: "post",
                        data: {
                            id: id
                        },
                        success: function (res) {
                            if (res.Success) {
                                $divSex.text(res.Result.Owner.Sex ? "男" : "女");
                                $divPhoneNum.text(res.Result.Owner.PhoneNum);
                                $divIDCard.text(res.Result.Owner.IDCard);
                                $divDate.text(Common.parseDate(res.Result.Owner.Date).format("yyyy-MM-dd"));
                                if (!(res.Result.Owner.Disuse)) {
                                    $divRoom.text(res.Result.RoomName + "(" + res.Result.BuildingName + ")");
                                    $divParking.text(res.Result.ParkingName ? res.Result.ParkingName : "无");
                                    $divRoom.closest(".row").show();
                                    $divParking.closest(".row").show();
                                    $divDisuseDate.closest(".row").hide();
                                } else {
                                    $divDisuseDate.text(Common.parseDate(res.Result.Owner.DisuseDate).format("yyyy-MM-dd"));

                                    $divRoom.closest(".row").hide();
                                    $divParking.closest(".row").hide();
                                    $divDisuseDate.closest(".row").show();
                                }
                            } else {
                                alert(res.Msg);
                                $divId.text("");
                            }
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            $divId.text("");
                            Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        }
                    });
                }

                //显示详情框
                $modalOwnerInfo.modal('show');

                return false;
            });
        }

        //业主select的选项,传入延迟对象来配合ajax保证延迟执行，不阻塞线程
        function setOwnerOptHtml() {
            var deferredObj = $.Deferred();
            //当没有时用ajax获取
            if (!useOwnerOptHtml) {
                $.ajax({
                    url: "/Owner/GetOwnersCoreInfo",
                    //async: false,
                    data: {
                        isDisuse: 3
                    },
                    method: "post",
                    success: function (res) {
                        if (res.Success) {
                            //myDataTable.ajax.reload();
                            var uselist = res.Result.UseOwner;
                            if (uselist.length == 0) {
                                deferredObj.resolve("请先添加业主");
                                return;
                            } else {
                                var html1 = "";
                                for (let i = 0; i < uselist.length; i++) {
                                    html1 += "<option value='" + uselist[i].Id + "'>" + uselist[i].Name + "</option>";
                                }
                                useOwnerOptHtml = html1;
                            }

                            var disuselist = res.Result.DisuseOwner;
                            var html2 = "";
                            for (let i = 0; i < disuselist.length; i++) {
                                html2 += "<option value='" + disuselist[i].Id + "'>" + disuselist[i].Name + "</option>";
                            }
                            disuseOwnerOptHtml = html2;

                            deferredObj.resolve("");
                        }
                        else deferredObj.resolve(res.Msg);
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        //Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        deferredObj.resolve("连接失败，请稍候重试");
                    },
                });
            } else {
                deferredObj.resolve("");
            }

            return deferredObj;
        }

        //收费项目select的选项,传入延迟对象来配合ajax保证延迟执行，不阻塞线程
        function setFeeItemOptHtml() {
            var deferredObj = $.Deferred();
            //当没有时用ajax获取
            if (!feeItemOptHtml) {
                $.ajax({
                    url: "/FeeItem/GetFeeItemsCoreInfo",
                    //async: false,
                    method: "post",
                    success: function (res) {
                        if (res.Success) {
                            //myDataTable.ajax.reload();
                            var list = res.Result;
                            if (list.length == 0) {
                                deferredObj.resolve("请先添加收费项目");
                                return;
                            } else {
                                var html = "";
                                for (let i = 0; i < list.length; i++) {
                                    html += "<option value='" + list[i].Id + "' data-scale='" + list[i].Scale + "'>" + list[i].Name + "</option>";
                                }
                                feeItemOptHtml = html;
                                deferredObj.resolve("");
                            }
                        }
                        else deferredObj.resolve(res.Msg);
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        //Common.ajaxError(XMLHttpRequest, textStatus, errorThrown);
                        deferredObj.resolve("连接失败，请稍候重试");
                    },
                });
            } else {
                deferredObj.resolve("");
            }

            return deferredObj;
        }
    </script>
